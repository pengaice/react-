
.footer_guide  //footer
  top-border-1px(#e4e4e4)
  position fixed
  z-index 10
  left 0
  right 0
  bottom 0
  background-color #fff
  height 85px

  display flex
  border-top: 1px solid #ccc;
  .guide_item
    display flex
    flex 1
    text-align center
    flex-direction column
    align-items center
    margin 5px
    color #999999
    &.active
      color #02a774
    span
      font-size 30px
      margin-top 2px
      margin-bottom 2px
      .iconfont
        font-size 40px
