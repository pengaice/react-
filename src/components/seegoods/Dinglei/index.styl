@import "../../../assets/stylus/mixins.styl"
.wrapper
  width 100%
  height 300px
  overflow hidden
  padding 30px
  box-sizing border-box
  .content
    width 1600px
    height 300px
    display flex
    align-items space-around
    justify-content center
    .contentItem
      text-align center
      display flex
      align-items center
      justify-content center
      flex-wrap nowrap
      flex-direction column
      width 340px
      margin 15px
      height 200px
      img
        width 100%
        height 100%
      p
        color #353535
        font-size 22px
        margin-top 20px