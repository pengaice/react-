@import "../../../assets/stylus/mixins.styl"
.veryGoodsAll
  .veryGoods
    width 100%
    height 650px
    padding 20px
    box-sizing border-box
    .veryGoodsTitle
      height 120px
      display flex
      justify-content center
      align-items center
      flex-direction column
      .foryou
        font-size 30
    .goodsImg
      width 100%
      height 400px
      img
        width 100%
        height 100%
